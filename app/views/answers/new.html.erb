<h1> Create new answer concerning Space cats </h1>

<% if @answers.errors.any? do |error| %>
<h3><%= error %></h3>
<% end %>

<%= form_for [@question, @answer] do |f| %>
<div>
  <%= f.label :answer %>
  <%= f.text_area :answer %>
</div>

<div>
  <%= f.label :user_id %>
  <%= f.text_field :user_id %>
</div>

<div>
  <%= f.submit "Submit" %>
</div>

<% end %>
